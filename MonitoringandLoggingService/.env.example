# Server config
PORT=3000
HOST=0.0.0.0
JSON_BODY_LIMIT=2mb

# Ingestion API key (for agents posting logs/metrics)
# Provide to clients via secure channel; send as header: x-api-key: <value>
MONITORING_INGEST_API_KEY=replace-with-strong-key

# Buffers max sizes (in-memory demo)
BUFFER_LOGS_MAX=20000
BUFFER_METRICS_MAX=20000
BUFFER_ALERTS_MAX=2000
BUFFER_AUDIT_MAX=5000

# Rule evaluation interval (ms)
RULE_EVAL_INTERVAL_MS=10000
